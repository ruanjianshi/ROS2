<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
 <xacro:include filename="$(find fishbot_description)/urdf/fishbot/common_inertial.xacro" />
    <xacro:macro name = "laser_xacro" params = "xyz">
        <link name="laser_cylinder_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.1"/>
                </geometry>

                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>       

            </visual>
            <collision>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.1"/>
                </geometry>

                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>   
            </collision>

            <xacro:cylinder_inertial m="0.05" r="0.01" h="0.1" />
        </link>


         <link name="laser_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.02" length="0.02"/>
                </geometry>

                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>       
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.02" length="0.02"/>
                </geometry>

                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>
            </collision>  

            <xacro:cylinder_inertial m="0.10" r="0.02" h="0.02" />
        </link>

        <!-- 机器人关节 -->
        <joint name="laser_joint" type="fixed">
            <parent link="laser_cylinder_link"/>
            <child link="laser_link"/>
            <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
        </joint>
            

        <joint name="laser_cylinder_joint" type="fixed">
            <parent link="base_link"/>
            <child link="laser_cylinder_link"/>
            <origin xyz="${xyz}" rpy="0 0 0"/>
        </joint>

        <gazebo reference="laser_link">
            <material>Gazebo/Black</material>
        </gazebo>
        <gazebo reference="laser_cylinder_link">
            <material>Gazebo/Black</material>
        </gazebo>

    </xacro:macro>

</robot>

